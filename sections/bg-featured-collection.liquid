          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background_1"
        },
        {
          "value": "background-2",
          "label": "Background_2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
